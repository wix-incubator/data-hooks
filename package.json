{
  "name": "@wix/data-hooks",
  "version": "2.0.0",
  "license": "UNLICENSED",
  "author": {
    "name": "Roman Shevchuk",
    "email": "romansh@wix.com"
  },
  "homepage": "https://github.com/wix-private/data-hooks",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "http://npm.dev.wixpress.com/",
    "versionBumpStrategy": "minor"
  },
  "scripts": {
    "build": "rimraf dist/ && tsc",
    "test": "jest",
    "posttest": "npm run lint",
    "lint": "yoshi lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "yoshi lint"
  },
  "devDependencies": {
    "@testing-library/react": "^11.2.6",
    "@types/jest": "^28.1.1",
    "@types/node": "^14.0.0",
    "@types/react": "^17.0.3",
    "@unidriver/core": "^1.2.3",
    "@unidriver/jsdom-react": "^1.6.3",
    "@wix/yoshi": "^5.0.0",
    "husky": "~4.2.1",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "lint-staged": "^10.0.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.4",
    "typescript": "^4.7.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testEnvironmentOptions": {
      "url": "http://localhost/"
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ]
  },
  "yoshi": {
    "hmr": "auto"
  },
  "eslintConfig": {
    "extends": "@wix/eslint-config-yoshi",
    "overrides": [
      {
        "files": [
          "*.spec.*"
        ],
        "rules": {
          "@typescript-eslint/no-shadow": "off"
        }
      }
    ]
  },
  "prettier": {
    "printWidth": 120
  },
  "wix": {
    "artifact": {
      "groupId": "com.wixpress",
      "artifactId": "data-hooks"
    }
  }
}
